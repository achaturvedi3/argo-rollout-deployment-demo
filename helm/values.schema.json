# values.schema.json
# JSON Schema for values.yaml validation
{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["image", "rollout", "service", "ingress"],
  "properties": {
    "nameOverride": {
      "type": "string"
    },
    "fullnameOverride": {
      "type": "string"
    },
    "namespace": {
      "type": "string",
      "default": "default"
    },
    "image": {
      "type": "object",
      "required": ["repository", "tag"],
      "properties": {
        "repository": {
          "type": "string"
        },
        "pullPolicy": {
          "type": "string",
          "enum": ["Always", "IfNotPresent", "Never"]
        },
        "tag": {
          "type": "string"
        }
      }
    },
    "rollout": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "replicas": {
          "type": "integer",
          "minimum": 1
        },
        "revisionHistoryLimit": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "service": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["ClusterIP", "NodePort", "LoadBalancer"]
        },
        "port": {
          "type": "integer",
          "minimum": 1,
          "maximum": 65535
        }
      }
    },
    "ingress": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "className": {
          "type": "string",
          "enum": ["alb", "nginx"]
        },
        "hosts": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["host"],
            "properties": {
              "host": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "aws": {
      "type": "object",
      "properties": {
        "region": {
          "type": "string"
        },
        "vpc": {
          "type": "object",
          "properties": {
            "subnets": {
              "type": "string"
            }
          }
        },
        "certificate": {
          "type": "object",
          "properties": {
            "arn": {
              "type": "string",
              "pattern": "^arn:aws:acm:"
            }
          }
        }
      }
    }
  }
}
