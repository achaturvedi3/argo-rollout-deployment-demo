# Configuration Template
# Copy this file to config.env and update with your values

# Docker Registry Configuration
DOCKER_REGISTRY=docker.io
DOCKER_USERNAME=your-docker-username
DOCKER_REPOSITORY=canary-demo

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=123456789012
EKS_CLUSTER_NAME=your-eks-cluster-name

# AWS ECR Configuration (if using ECR instead of Docker Hub)
# ECR_REGISTRY=${AWS_ACCOUNT_ID}.dkr.ecr.${AWS_REGION}.amazonaws.com
# ECR_REPOSITORY=canary-demo

# Kubernetes Configuration
K8S_NAMESPACE=default
ARGOCD_NAMESPACE=argocd

# Application Configuration
APP_NAME=canary-demo
APP_VERSION=v1

# Ingress Configuration
INGRESS_HOST=canary-demo.example.com
# Set to empty if using LoadBalancer instead of Ingress
# INGRESS_HOST=

# GitHub Configuration
GITHUB_ORG=your-github-username
GITHUB_REPO=argo-rollout-deployment-demo

# Rollout Configuration
CANARY_STEP_1_WEIGHT=10
CANARY_STEP_1_PAUSE=30s
CANARY_STEP_2_WEIGHT=30
CANARY_STEP_2_PAUSE=30s
CANARY_STEP_3_WEIGHT=60
CANARY_STEP_3_PAUSE=30s
AUTO_PROMOTION_ENABLED=true
AUTO_PROMOTION_SECONDS=10

# Optional: SSL/TLS Configuration
# ENABLE_TLS=false
# TLS_SECRET_NAME=canary-demo-tls
# CERT_MANAGER_ISSUER=letsencrypt-prod
